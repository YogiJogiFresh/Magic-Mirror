{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@/*" : [
                "src/*"
            ],
            "@models/*": [
                "src/models/*"
            ],
            "@configs/*" : [
                "src/configs/*"
            ],
            "@middleware/*" : [
                "src/middleware/*"
            ],
            "@routes/*": [
                "src/routes/*"
            ],
            "@countrllers/*" : [
                "src/controllers/*"
            ],
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}